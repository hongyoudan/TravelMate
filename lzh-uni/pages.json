{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "旅伴"
			}
		},
		{
			"path": "pages/article/article",
			"style": {
				"navigationBarTitleText": "文章"
			}
		}, {
			"path": "pages/scenic_spot_detail/scenic_spot_detail",
			"style": {
				"navigationBarTitleText": "景点详情",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/article_detail/article_detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "文章详情",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "旅伴",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#000000",
		"selectedColor": "#1296db",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/home@not_selected.png",
				"selectedIconPath": "static/images/home@selected.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/article/article",
				"iconPath": "static/images/article@not_selected.png",
				"selectedIconPath": "static/images/article@selected.png",
				"text": "文章"
			}
		]
	},
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	"uniIdRouter": {}
}
